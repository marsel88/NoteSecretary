<Page x:Class="NoteSecretary.Pages.ClientsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NoteSecretary.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="600"
      Title="ClientsPage"
      Background="#708090">
    <Grid>
        <StackPanel Orientation="Horizontal" Width="450" Height="60" Margin="40,60,0,0" VerticalAlignment="Top" HorizontalAlignment="Left">
            <Button x:Name="AddClientBtn" Margin="10" Width="110" Height="20" HorizontalAlignment="Center" VerticalAlignment="Center">Добавить клиента</Button>
            <Button x:Name="EditClientBtn" Width="100" Height="20" HorizontalAlignment="Center" VerticalAlignment="Center">Редактировать</Button>
            <Button x:Name="DeleteClientBtn" Margin="10"  Width="70" Height="20">Удалить</Button>
        </StackPanel>
        <Label FontSize="20" FontWeight="DemiBold" Foreground="#FFFAFA" Margin="20" Width="120" Height="50" HorizontalAlignment="Left" VerticalAlignment="Top">Клиенты</Label>
        <DataGrid x:Name="ClientsDG" Width="500" Height="280" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="30"></DataGrid>
        
    </Grid>
</Page>
